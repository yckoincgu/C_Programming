# Makefile
# https://www.youtube.com/watch?v=CRlqU9XzVr4&ab_channel=JacobSorber

BIN = bin/hellomake
SOURCES = src/hellomake.c src/hellofunc.c
OBJECTS = obj/hellomake.o obj/hellofunc.o
CFLAGS = -g3 -Wall  

ALL: $(BIN)

$(BIN):$(OBJECTS)
	gcc $(CFLAGS) $(OBJECTS) -o $(BIN)

obj/%.o: src/%.c
	gcc $(CFLAGS) -c $< -o $@



clean:
	rm -f $(BIN) $(OBJECTS)
